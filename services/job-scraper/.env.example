# Service Configuration
SERVICE_NAME=job-scraping-service
ENVIRONMENT=production
DEBUG=False
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1
GRAPHQL_PATH=/graphql
WS_PATH=/ws

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/jobscraper
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40
VECTOR_DIMENSION=768

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_CLUSTER_NODES=redis-node1:6379,redis-node2:6379,redis-node3:6379
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=100

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_JOBS=job-updates
KAFKA_TOPIC_ANALYTICS=job-analytics
KAFKA_CONSUMER_GROUP=job-processor

# SerpAPI Configuration
SERP_API_KEY=your_serpapi_key_here
SERP_API_TIMEOUT=30

# HuggingFace Configuration
HUGGINGFACE_API_KEY=your_huggingface_key_here
HUGGINGFACE_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Scraping Configuration
MAX_CONCURRENT_SCRAPERS=50
SCRAPER_TIMEOUT=60
RETRY_ATTEMPTS=3
RETRY_DELAY=5
USER_AGENT_ROTATION=True

# Proxy Configuration
PROXY_PROVIDER=rotating-proxies
PROXY_API_KEY=your_proxy_key_here
PROXY_ROTATION_INTERVAL=300

# Anti-Detection Configuration
FINGERPRINT_ROTATION=True
TLS_RANDOMIZATION=True
BEHAVIORAL_MIMICKING=True
CAPTCHA_SOLVER_API_KEY=your_captcha_key_here

# Rate Limiting
RATE_LIMIT_PER_DOMAIN=10
RATE_LIMIT_WINDOW=60
ADAPTIVE_RATE_LIMITING=True

# Monitoring
PROMETHEUS_PORT=9090
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831

# Sentry Configuration (Error Tracking)
SENTRY_DSN=your-python-sentry-dsn-here
APP_VERSION=1.0.0

# Performance Targets
TARGET_DAILY_JOBS=50000
TARGET_RESPONSE_TIME_MS=100
TARGET_UPTIME_PERCENT=99.95
MAX_CONCURRENT_UPDATES=1000

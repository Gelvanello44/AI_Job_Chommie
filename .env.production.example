# ============================================
# AI Job Chommie - Production Environment Configuration
# Secure configuration template for production deployment
# ============================================

# APPLICATION CONFIGURATION
# ─────────────────────────────────────────────
NODE_ENV=production
APP_NAME="AI Job Chommie"
APP_URL=https://www.aijobchommie.co.za
FRONTEND_URL=https://www.aijobchommie.co.za
BACKEND_URL=https://www.aijobchommie.co.za/api
PORT=5000

# DATABASE CONFIGURATION
# ─────────────────────────────────────────────
DB_PASSWORD=your_secure_database_password_here
DATABASE_URL=postgresql://aijc:${DB_PASSWORD}@postgres:5432/aijobchommie?schema=public
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# REDIS CACHE CONFIGURATION
# ─────────────────────────────────────────────
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your_redis_password_here
REDIS_TTL=3600

# AUTHENTICATION & SECURITY
# ─────────────────────────────────────────────
JWT_SECRET=your_ultra_secure_jwt_secret_minimum_32_characters
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_token_secret_minimum_32_characters
JWT_REFRESH_EXPIRES_IN=30d
SESSION_SECRET=your_session_secret_minimum_32_characters
BCRYPT_ROUNDS=12

# HUGGING FACE AI INTEGRATION
# ─────────────────────────────────────────────
HUGGINGFACE_API_TOKEN=your_huggingface_api_token_here

# EMAIL SERVICE CONFIGURATION
# ─────────────────────────────────────────────
EMAIL_FROM=noreply@aijobchommie.co.za
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USER=apikey
EMAIL_PASSWORD=your_sendgrid_api_key_here
EMAIL_SECURE=false

# PAYMENT GATEWAY - STRIPE
# ─────────────────────────────────────────────
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_SUCCESS_URL=https://www.aijobchommie.co.za/payment/success
STRIPE_CANCEL_URL=https://www.aijobchommie.co.za/payment/cancelled

# ERROR TRACKING - SENTRY
# ─────────────────────────────────────────────
SENTRY_DSN=https://your_sentry_dsn@o4508440472616960.ingest.us.sentry.io/your_project_id
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# RATE LIMITING
# ─────────────────────────────────────────────
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_STRICT_MAX_REQUESTS=10

# CORS CONFIGURATION
# ─────────────────────────────────────────────
CORS_ORIGIN=https://www.aijobchommie.co.za,https://aijobchommie.co.za
CORS_CREDENTIALS=true

# LOGGING CONFIGURATION
# ─────────────────────────────────────────────
LOG_LEVEL=info
LOG_FORMAT=json
LOG_DIR=/app/logs

# BACKUP CONFIGURATION
# ─────────────────────────────────────────────
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_S3_BUCKET=aijobchommie-backups
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=eu-west-1

# MONITORING & ANALYTICS
# ─────────────────────────────────────────────
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
HOTJAR_ID=XXXXXXX
MIXPANEL_TOKEN=your_mixpanel_token

# SOCIAL MEDIA INTEGRATION
# ─────────────────────────────────────────────
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret

# FEATURE FLAGS
# ─────────────────────────────────────────────
FEATURE_AI_MATCHING=true
FEATURE_AUTO_APPLY=true
FEATURE_CV_BUILDER=true
FEATURE_ANALYTICS=true
FEATURE_PREMIUM_PLANS=true

# PERFORMANCE OPTIMIZATION
# ─────────────────────────────────────────────
ENABLE_COMPRESSION=true
ENABLE_CACHE=true
CACHE_MAX_AGE=31536000
STATIC_CACHE_MAX_AGE=31536000

# DEPLOYMENT CONFIGURATION
# ─────────────────────────────────────────────
DEPLOYMENT_ENV=production
AUTO_MIGRATE=false
SEED_DATABASE=false
DEBUG_MODE=false
